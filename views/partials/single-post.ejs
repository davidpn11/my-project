<!-- CONTENT -->
		<div class="col-md-8 blog-single" ng-controller="ContentController">
			<div class="bs-meta">
				<span class="bs-cat">{{post.category}}</span>
			<!--	<span class="bs-comments"><a href="#"><i class="fa fa-comments-o"></i> {{post.comments.length}} Coment치rios</a> </span> -->
			</div>
			<h3>{{post.title}}</h3>
			<div class="row">
				<div class="col-md-3 bs-aside">
					<h6><span>{{post.author}}</span></h6>
					<div class="sep1"></div>
					<div class="space10"></div>
					<div class="rp-date">
						<span>{{post.mes}}</span>
						{{post.dia}}
						<span><em>/</em> {{post.ano}}</span>
					</div>
					<div class="space30"></div>
					<div class="sep1"></div>
					<div class="space20"></div>
					
					<span class="bsa-social">
					<a href="#"><i class="fa fa-facebook"></i></a>
					<a href="#"><i class="fa fa-twitter"></i></a>
					<a href="#"><i class="fa fa-plus"></i></a>
					</span>
				</div>
				
				<div class="col-md-9" >
                    <p> {{post.body}}</p>
                    
                    <div class="img-w-caption">
						<img ng-src="{{post.image}}" class="img-responsive"alt=""/>                     
						<span>{{post.imageSpan}}</span>
					</div>
					
					
					<div class="bs-tags">
						<span>Categoria : <a href="/category/{{post.category}}">{{post.category}}</a></span>
						<!--<span>Tags : <a href="#">Basket,</a> <a href="#">Dunk,</a> <a href="#">Jump</a></span>-->
					</div>
					
					
					
					</div>
			</div>
			
			
			<!-- Comments --> 
			<div class="comments-wrap">
				<div id="tabwrap">
					<ul id="tabs">
						<li class="current"><a href="#comments">{{post.comments.length}} Coment치rios</a></li>
				    </ul>
					
					<div id="content">
						<div id="comments" class="current">
							<ul class="comments" ng-repeat="comentario in post.comments">
								<li>
									<div class="c-img"><img src="/images/profile.png" width="80px" alt=""/></div>
									<div class="comment-inner" >
										<h6><span>{{comentario.nome}}</span> </h6>
										
								<p>{{comentario.body}}</p>	
									</div>
								</li>
								
								
                        </ul> 
        <form name="commentForm" ng-controller="CommentController">


                  <!--  Review Form -->

                  <fieldset class="form-group">
                    <input ng-model="comentario.nome" type="name" class="form-control" placeholder="Nome" title="commentName">
                  </fieldset>
                  <fieldset class="form-group">
                      <textarea ng-model="comentario.body" class="form-control" placeholder="Coment치rio" title="commentBody"></textarea>
                  </fieldset>
                  <fieldset class="form-group">
                    <input type="submit" class="btn btn-primary pull-right" value="Enviar Coment치rio" ng-click="submitComment(3)" />
                  </fieldset>
                </form>
                            
						</div>
						</div>
				</div>
                 
          
                
			</div>
		</div>
	
		<!-- Sidebar --> 
		<aside class="col-md-4">
		
			<!-- Popular News -->
			<div class="side-widget p-news" ng-controller="popularController as popular">
				<h5><span>Mais comentadas</span></h5>
				<div class="sw-inner" >
					<ul>
						<li ng-repeat="post in popular.posts | limitTo: 5">
							<img ng-src={{post.image}} alt=""/>
							<div class="pn-info">
								<span>{{post.category}}</span>
								<h4><a href='/single-post/{{post.id}}'>{{post.title}}</a></h4>
							</div>
						</li>
						
					</ul>
				</div>
			</div>
        </aside>