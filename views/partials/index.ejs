
		<div class="col-md-8 block-1">
			<div class="row">
                <!-- Ultimas noticias -->
				<div class="col-md-3 b1-aside" ng-controller="lastsController as lasts">
					<h5><span>Últimas Notícias</span></h5>
					<div class="bla-content" ng-repeat="post in lasts.posts | limitTo:5">
						<div ng-if="post.id !=lasts.posts.length-1">
						<span class="cat-default">{{post.category}}</span>
						<p>Postada em {{post.dia}} de {{post.mes}} de {{post.ano}}</p>
						<h4><a href='/single-post/{{post.id}}'>{{post.title}}</a></h4>
						<div class="sep"></div>
						</div>
					</div>
					
				</div>
				<!--Post Principal (mais recente)-->
				<div class="col-md-9 block-right" ng-controller="lastsController as lasts">
					<div class="bl-featured-big" >
						<div class="bl-meta">
							<span><i class="fa fa-comments-o"></i> {{lasts.posts[0].comments.length}} Comentários</span><br>
						</div>
						<img ng-src={{lasts.posts[0].image}} class="img-responsive" alt=""/>
						<div class="bl-info">
							<span>{{lasts.posts[0].category}}</span>
							<h3><a href='/single-post/{{lasts.posts[0].id}}'>{{lasts.posts[0].title}} </a></h3>
							<a class="rmore" href='/single-post/{{lasts.posts[0].id}}'>Continue lendo <i class="fa fa-arrow-right"></i></a>
						</div>
					</div>
					
					<!-- Noticias em destaque -->
					<div class="featured-news">
						<h5><span>Notícias em Destaque</span></h5>
						<div class="row">
							<div class="col-md-6">
                                <div class="fn-inner" ng-controller="viewsController as destaque">
									<div class="fn-thumb" ng-repeat="post in destaque.posts |limitTo:2" >
										<img ng-src={{post.image}} class="img-responsive" alt=""/>
										<div class="fn-meta">{{post.category}}   <span>{{post.comments.length}} <i class="fa fa-comments"></i></span></div>
                                    <h4><a href='/single-post/{{post.id}}'>{{post.title}}</a></h4>
									<em>Postada em {{post.dia}} de {{post.mes}} de {{post.ano}}</em>
									<p>{{post.body | limitTo: 140}}...</p>
									</div>	
								</div>  
                            </div>
                            <div class="col-md-6">
                                <div class="fn-inner" ng-controller="viewsController as destaque">
									<div class="fn-thumb"  >
										<img ng-src={{destaque.posts[2].image}} class="img-responsive" alt=""/>
										<div class="fn-meta">{{destaque.posts[2].category}}   <span>{{destaque.posts[2].comments.length}} <i class="fa fa-comments"></i></span></div>
                                    <h4><a href='/single-post/{{destaque.posts[2].id}}'>{{destaque.posts[2].title}}</a></h4>
									<em>Postada em {{destaque.posts[2].date}}</em>
									<p>{{destaque.posts[2].body | limitTo: 140}}...</p>
									</div>	
								</div>
                                
                                <div class="fn-inner" ng-controller="viewsController as destaque">
									<div class="fn-thumb"  >
										<img ng-src={{destaque.posts[3].image}} class="img-responsive" alt=""/>
										<div class="fn-meta">{{destaque.posts[3].category}}   <span>{{destaque.posts[3].comments.length}} <i class="fa fa-comments"></i></span></div>
                                    <h4><a href='/single-post/{{destaque.posts[3].id}}'>{{destaque.posts[3].title}}</a></h4>
									<em>Postada em  {{destaque.posts[3].date}}</em>
									<p>{{destaque.posts[2].body | limitTo: 140}}...</p>
									</div>	
								</div>  
                            </div>
						</div>
					</div>
				</div>
			</div>
			
			
		</div>
	
		<!-- Sidebar -->
		<aside class="col-md-4">
		
			<!-- Popular News -->
			<div class="side-widget p-news" ng-controller="popularController as popular">
				<h5><span>Mais comentadas</span></h5>
				<div class="sw-inner" >
					<ul>
						<li ng-repeat="post in popular.posts | limitTo: 5">
							<img ng-src={{post.image}} alt=""/>
							<div class="pn-info">
								<span>{{post.category}}</span>
								<h4><a href='/single-post/{{post.id}}'>{{post.title}}</a></h4>
							</div>
						</li>
						
					</ul>
				</div>
			</div>
		
			
		</aside>
	
	